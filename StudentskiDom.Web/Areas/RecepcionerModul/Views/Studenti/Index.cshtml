<!-- Custom styles for this template-->
<link href="~/css/sb-admin.css" rel="stylesheet">
<ol class="breadcrumb">
	<li>
		<a href="/RecepcionerModul" class="breadcrumb-item" style="color:cadetblue;font-size:x-large;text-decoration:none">Modul recepcioner</a>
	</li>

</ol>
<hr />
<div>
	<h2 style="display:inline-block">Upisani studenti</h2> <a href="/RecepcionerModul/Studenti/Dodaj" class="btn btn-success" style="float:right">Dodaj novog</a><a href="/RecepcionerModul" class="btn btn-primary" style="float:right;margin-right:10px">Nazad</a>
</div>
<hr />
<form asp-route="/ModulRecepcioner/Studenti/Index"  method="get"  class="form-inline my-2 my-lg-0 mr-lg-2">
	<div class="input-group">
		<input class="form-control" type="text" placeholder="Pretraga studenata..." name="searchString">
		<span class="input-group-append">
			<button class="btn btn-primary" type="submit">
				<i class="fa fa-search"></i>
			</button>
		</span>
	</div>
</form>
<hr />

<div class="card mb-3">
	<div class="card-header">
		<i class="fa fa-table"></i> Tabela studenata
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable"  cellspacing="0">
				<thead>
					<tr>
						<th>Ime</th>
						<th>Prezime</th>
						<th>Spol</th>
						<th>Jmbg</th>
						<th>Email</th>
						<th>Grad</th>
						<th>Soba</th>
						<th>Akcija</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>Ime</th>
						<th>Prezime</th>
						<th>Spol</th>
						<th>Jmbg</th>
						<th>Email</th>
						<th>Grad</th>
						<th>Soba</th>
						<th>Akcija</th>
					</tr>
				</tfoot>
				<tbody>
					@foreach (var x in Model.Rows)
					{
						<tr>
							<td>@x.Ime</td>
							<td>@x.Prezime</td>
							<td>@x.Spol</td>
							<td>@x.Jmbg</td>
							<td>@x.Email</td>
							<td>@x.Grad</td>
							@{if (x.Soba_ == null)
								{
									<td><a href="/RecepcionerModul/Studenti/DodajUSobu?id=@x.Id">Dodaj</a></td>
								}
								else
								{
									<td>@x.Soba_</td>
								}
							}
							<td>
								<a href="/RecepcionerModul/Studenti/Detalji?id=@x.Id" class="btn btn-primary">Detalji</a>  <a href="/RecepcionerModul/Studenti/Obrisi?id=@x.Id" class="btn btn-danger">Obriši</a>
							</td>
						</tr>
					}


				</tbody>
			</table>
		</div>
	</div>
</div>

