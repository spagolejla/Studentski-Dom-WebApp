@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout-novi2.cshtml";

}
@model StudentiIndexVM
<!-- Bootstrap core CSS-->
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
