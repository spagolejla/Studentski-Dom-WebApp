@using StudentskiDom.Web.Areas.RecepcionerModul.ViewModels
@{
	ViewData["Title"] = "KorisnickiRacunPodaci";
	Layout = "~/Views/Shared/_LayoutStudentModul.cshtml";
}
@model StudentiDetaljiVM
<ol class="breadcrumb">
	<li>
		<a href="/StudentModul" class="breadcrumb-item" style="color:cadetblue;font-size:x-large;text-decoration:none">Modul student</a>
	</li>

</ol>
<hr />
<div>
	<h2 style="display:inline-block">Podaci o korisničkom računu</h2><a href="/StudentModul" class="btn btn-primary" style="float:right;margin-right:10px">Nazad</a>
</div>
<hr />
<div class="card mb-3">
	<div class="card-header">
		<i class="fa fa-table"></i> Korisnički i statusni podaci
	</div>
	<div class="card-body">
		<form>
			<div class="form-group">
				<div class="form-row">
					<div class="col-md-6">
						<label>Username</label>
						<input type="text" readonly value="@Model.Username" style="border:none" class="form-control" />
					</div><div class="col-md-6">
						<label>Password</label>
						<input type="text" readonly value="@Model.Password" style="border:none" class="form-control" />

					</div>
				</div>
			</div>
			@*<div class="form-group">
					<label>Nalazi se u sobi</label>
					<input type="text" readonly value="@Model.Soba_" style="border:none" class="form-control" />
				</div>*@



		</form>
		@*<a  class="btn btn-outline-secondary" style="float:right" id="btn4">Promjeni lozinku</a>*@

	</div>
</div>
<div style="background-color:aliceblue;margin-bottom:10px;padding-left:5px;padding-bottom:5px;padding-right:10px;">


	<p style="font-size:larger"><b>Napomena</b></p>
	<hr />
	<p>Ukoliko smatrate da vaše podaci nisu ispravno evidentirani, što prije se obratite na rececpciji studentskog doma!</p>


</div>
<div id="div4">

</div>
<script src="~/vendor/jquery/jquery.min.js"></script>
<script>
	$(document).ready(function (parameters) {
		$("#btn4").click(function (parameters) { 
			$.get("/StudentModul/Podaci/PromjeniLozinku",
				function (rezultat, status) {
					$("#div4").html(rezultat);

				});

		});
	
	});


</script>
